{
  "name": "habitica-menubar-app",
  "version": "1.0.0",
  "description": "A menubar app for Habitica",
  "dependencies": {
    "habitica": "^4.0.0",
    "habitica-markdown": "^1.3.0",
    "menubar": "^5.2.0",
    "vue": "^2.1.10",
    "vue-router": "^2.2.0"
  },
  "devDependencies": {
    "browserify": "^14.0.0",
    "electron-packager": "^5.1.0",
    "electron-prebuilt": "^0.36.0",
    "vueify": "^9.4.0",
    "watchify": "^3.9.0"
  },
  "main": "main.js",
  "scripts": {
    "build:client": "browserify client-src/main.js -o client-assets/js/script.js",
    "build:client:watch": "watchify client-src/main.js -o client-assets/js/script.js",
    "build:electron": "electron-packager . Example --platform=darwin --arch=x64 --version=0.36.0 --icon=Icon.icns",
    "build": "NODE_ENV=production npm run build:client && npm run build:electron",
    "start": "npm run build:client && electron ."
  },
  "browserify": {
    "transform": ["vueify"]
  }
}
